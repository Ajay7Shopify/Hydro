{
  "name": "@shopify/hydrogen-codegen",
  "version": "0.0.0",
  "private": true,
  "description": "GraphQL Code Generator preset for gql magic.",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "tsup --clean --config ./tsup.config.ts",
    "dev": "tsup --watch --config ./tsup.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "cross-env SHOPIFY_UNIT_TEST=1 vitest run",
    "test:watch": "cross-env SHOPIFY_UNIT_TEST=1 vitest",
    "postinstall": "node ./postinstall.mjs"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/esm/index.d.ts",
  "typescript": {
    "definition": "dist/esm/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shopify/hydrogen.git",
    "directory": "packages/hydrogen-codegen"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/babel__helper-plugin-utils": "7.10.0",
    "@types/babel__template": "7.4.1",
    "@graphql-codegen/plugin-helpers": "^4.1.0",
    "@graphql-tools/utils": "^9.0.0"
  },
  "dependencies": {
    "@babel/helper-plugin-utils": "^7.14.5",
    "@babel/template": "^7.15.4",
    "@graphql-codegen/add": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^3.0.1",
    "@graphql-codegen/visitor-plugin-common": "^3.0.1",
    "tslib": "~2.5.0"
  },
  "peerDependencies": {
    "graphql": "^0.8.0 || ^0.9.0 || ^0.10.0 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0 || ^16.0.0"
  }
}
