{
  "extends": "../../tsconfig.json",
  "include": ["src", "tests"],
  "exclude": ["dist", "tests", "node_modules", ".turbo"],
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "declaration": true,
    "jsx": "react",
    "target": "ES2022",
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true
  }
}
